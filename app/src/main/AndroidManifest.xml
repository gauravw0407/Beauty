<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gr.beauty">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    \
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".View.SalonLogin"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".View.SalonRegister"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".View.SalonServices"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".View.SalonEditServices"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".View.ChooseCategory"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.CustomerLogin"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".View.CustomerRegister"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".View.CustomerView"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".View.CustomerSalonView"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".View.CustomerBookings"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".View.SalonBookings"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".View.CustomerSalonSearch"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="adjustPan|stateHidden" />

        <receiver android:name=".AlarmReceiver">
            <intent-filter>
                <action android:name="NOTIFICATION_SERVICE" />
            </intent-filter>
        </receiver>

        <activity android:name=".View.SelectDate"></activity>
    </application>

</manifest>