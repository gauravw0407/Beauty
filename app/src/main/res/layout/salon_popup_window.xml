<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_layout_border"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Services"
        style="@style/Base.TextAppearance.AppCompat.Menu"
        android:onClick="onEditServicesClick"
        android:textColor="#000000"
        android:layout_marginRight="15dp"
        android:id="@+id/editServices"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bookings"
        android:textColor="#000000"
        style="@style/Base.TextAppearance.AppCompat.Menu"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:onClick="onBookingsClick"
        android:id="@+id/bookings"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:textColor="#000000"
        style="@style/Base.TextAppearance.AppCompat.Menu"
        android:onClick="onSalonLogOutClick"
        android:id="@+id/salonLogOut"/>

</LinearLayout>